<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f|%>

<table>
<tr>
  <td>
     <%= f.label "ジャンル名" %>
  </td>
  <td>
     <%= f.text_field :name %>
  </td>
  <td>
  <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>
  </td>
</tr>
</table>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
          <%= genre.name %>
          </td>
          <td>

          <%= link_to "編集する",edit_admin_genre_path(genre.id), class: "btn btn-success" %>

          </td>

        </tr>
      <% end %>
    </tbody>
  <table>




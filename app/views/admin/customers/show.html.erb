<h2><%= @customer.full_name %>さんの会員詳細</h2>

<table>
  <thead>
  <tr>
  <td><h4>会員ID</h4></td>
  <td><h4><%= @customer.id %></h4></td>
  </tr>

  <tr>
  <td><h4>氏名</h4></td>
  <td><h4><%= @customer.full_name %></h4></td>
  </tr>

  <tr>
  <td><h4>フリガナ</h4></td>
  <td><h4><%= @customer.full_name_kana %></h4></td>
  </tr>

  <tr>
  <td><h4>郵便番号</h4></td>
  <td><h4><%= @customer.postal_code %></h4></td>
  </tr>

  <tr>
  <td><h4>住所</h4></td>
  <td><h4><%= @customer.address %></h4></td>
  </tr>

  <tr>
  <td><h4>電話番号</h4></td>
  <td><h4><%= @customer.telephone_number %></h4></td>
  </tr>

  <tr>
  <td><h4>メールアドレス</h4></td>
  <td><h4><%= @customer.email %></h4></td>
  </tr>

  <tr>
    <td>
      <h4>会員ステータス</h4></td>
      <td>
        <h4><% if @customer.is_deleted == true %>
        <p class="text-success">有効</p>
        <% else %>
        <p class="text-success">退会</p>
        <% end %>
      </h4>
    </td>
  </tr>

  <tr>
    <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %></td>
    <td><%= link_to"注文履歴一覧を見る", admin_homes_top_path, class: "btn btn-primary"%></td>
  </tr>







 </thead>
</table>
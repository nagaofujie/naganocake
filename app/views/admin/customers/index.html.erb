<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
<h4>会員一覧</h4>
<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
    <td><%= customer.email %></td>
    <td><% if customer.is_deleted == true %>
        <p class="text-success">有効</p>
        <% else %>
        ,<p class="text-success">退会</p>
        <% end %>
     </td>
  </tr>
  <% end %>
</tbody>
</table>
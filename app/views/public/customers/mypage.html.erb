<% if customer_signed_in? && @customer == current_customer %>
<h2>マイページ</h2>
<% else %>
<h2>ユーザーページ</h2>
<% end %>


<h4>登録情報</h4>
<%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>


<table border="2">
  <tr>
    <th>氏名</th>
    <th><%= @customer.full_name %></th>
  </tr>
  <tr>
    <th>カナ</th>
    <th><%= @customer.full_name_kana%></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address%></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email%></th>
  </tr>
</table>

<div><h4>配送先</h4> <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></div>
<div><h4>注文履歴</h4> <%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary" %></div>

<meta name="viewport" content="width=device-width,initial-scale=1.0">
<h2>商品一覧</h2>
  <div class="container-fluid">
    <div class="row">
      <div class="col-4">
        <div class="d-flex flex-row bd-highlight mb-3">
      <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image(200,100) %><br>
      <% end %>
      <%= item.name%><br>

      <%= item.price %>

      <% end %>
      </div>
    </div>
  </div>
</div>
<%= paginate @items %>
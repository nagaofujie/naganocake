<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<div class="form-group">
  <%= f.label :"郵便番号(ハイフンなし)" %>
<%= f.text_field :postal_code %>
</div>

<div class="form-group">
<%= f.label :"住所" %>
<%= f.text_area :address %>
</div>

<div class="form-group">
 <%= f.label :"宛名" %>
<%= f.text_field :name %>
</div>

<%= f.submit "新規登録", class: "btn btn-success" %>

<% end %>

<% @addresses.each do |address| %>
<table class="table">
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-primary" %><%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %></td>
  </tr>
</table>
<% end %>
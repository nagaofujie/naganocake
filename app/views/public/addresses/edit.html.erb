<h2>配送先編集</h2>

<%= form_with model: @address, url: {controller:"public/addresses",action:"update"} do |f| %>
<div class="form-inline" >
  <h4>郵便番号（ハイフンなし）</h4>
<%= f.text_field :postal_code %>
</div>

<div class="form-inline" >
  <h4>住所</h4>
<%= f.text_area :address %>
</div>

<div class="form-inline" >
  <h4>宛名</h4>
<%= f.text_field :name %>
</div>

<%= f.submit "変更内容を保存",class: "btn btn-success" %>

<% end %>
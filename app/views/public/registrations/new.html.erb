<h2>新規会員登録</h2>

<%= form_with model: @customer, url:customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
     <%= f.label :last_name, "名前" %>
    (姓)<%= f.text_field :last_name %>

    (名)<%= f.text_field :first_name %>
  </div>

  <div class="field">
     <%= f.label :last_name, "フリガナ" %>
    (セイ)<%= f.text_field :last_name_kana %>


    (メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス" %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
     <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code %>

  <div class="field">
     <%= f.label :address, "住所" %>
    <%= f.text_field :address %>

  <div class="field">
     <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number %>

  <div class="field">
    <%= f.label :password,"パスワード（6文字以上）" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>

<%= render "public/shared/links" %>からログインしてください。

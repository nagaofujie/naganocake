<h2 class="text-center">注文履歴一覧</h2>
<table class="table">
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.postal_code %><br><%= order.address%><br><%= order.name %></td>
    <td><% order.order_items.each do |order_item| %>
    <%= order_item.item.name %><br>
    <% end %></td>
    <td><%= order.total_payment %>円</td>
    <td><%= order.status_i18n %></td>
    <td><%=link_to "表示する", order_path(order.id), class: "btn btn-success"%></td>
  </tr>
  <% end %>
  </table>